datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  shadowDatabaseUrl    = env("SHADOW_DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Transactions {
  hash    String   @unique
  date    DateTime
  txnType String
  txnQty  Int
}

model Companion {
  id        Int      @id @default(autoincrement())
  tokenId   Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?

  backgroundColor String
  skinColor       String
  hairColor       String
  pose            String
  gender          String

  blemish    String?
  hair       String
  brows      String
  eyes       String
  nose       String
  mouth      String
  facialhair String?

  headwear String?
  eyewear  String?
  mask     String?
  top      String?
  bottom   String
  shoes    String?

  hairColors     String?
  headwearColors String?
  eyewearColors  String?
  maskColors     String?
  topColors      String?
  bottomColors   String?
  shoesColors    String?


}
